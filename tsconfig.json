{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@lib": [
        "./src/lib/index.ts"
      ],
      "@bin/*": [
        "./src/bin/*"
      ]
    }
  },
  "include": [
    "src",
    "docs",
    "global.d.ts"
  ]
}
